generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model ARTDrugOrder {
  id              String              @id @default(uuid())
  patient         Json
  appointment     Json?
  eventId         String?
  event           ARTEvent?           @relation(fields: [eventId], onDelete: SetNull, references: [id])
  deliveryAddress Json
  deliveryMethod  OrderDeliveryMethod
  courierService  Json?
  deliveryPerson  Json?
  phoneNumber     String
  type            OrderType
  orderedBy       Json
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  deliveries      ARTDrugDelivery[]
}

model ARTDrugDelivery {
  id              String                        @id @default(uuid())
  orderId         String?
  order           ARTDrugOrder?                 @relation(fields: [orderId], onDelete: SetNull, references: [id])
  patient         Json //Subscriber
  services        ARTDrugDeliveryExtraservice[]
  method          DeliveryMethod
  courierService  Json?
  deliveryPerson  Json?
  deliveryAddress Json?
  eventId         String?
  event           ARTEvent?                     @relation(fields: [eventId], onDelete: SetNull, references: [id])
  initiatedBy     Json
  createdAt       DateTime                      @default(now())
  updatedAt       DateTime                      @updatedAt
}

model ARTDrugDeliveryExtraservice {
  id         String          @id @default(uuid())
  deliveryId String
  delivery   ARTDrugDelivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  service    String
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model ARTEvent {
  id                        String                     @id @default(uuid())
  title                     String
  distributionTime          DateTime
  distributionVenue         String
  remiderNortificationDates ARTEventNotificationTime[]
  groupId                   String
  group                     ARTGroup                   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt                 DateTime                   @default(now())
  updatedAt                 DateTime                   @updatedAt
  remarks                   String?                    @db.Text
  orders                    ARTDrugOrder[]
  deliveries                ARTDrugDelivery[]
  feedBacks                 ARTEventFeedBack[]
}

model ARTEventNotificationTime {
  id      String   @id @default(uuid())
  eventId String
  event   ARTEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
  time    DateTime

  @@unique([time, eventId])
}

model ARTEventFeedBack {
  id                    String    @id @default(uuid())
  eventId               String?
  event                 ARTEvent? @relation(fields: [eventId], onDelete: SetNull, references: [id])
  confirmedAttendance   Boolean
  requestedHomeDelivery Boolean
  note                  String?   @db.Text
  // orderId             String?       @db.Uuid
  // order               ARTDrugOrder? @relation(fields: [orderId], onDelete: SetNull, references: [id])
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model ARTGroup {
  id               String                    @id @default(uuid())
  title            String
  description      String?                   @db.Text
  createdAt        DateTime                  @default(now())
  updatedAt        DateTime                  @updatedAt
  events           ARTEvent[]
  extraSubscribers ARTGroupExtraSubscriber[]
  enrollments      ARTGroupUserEnrollment[]
}

model ARTGroupExtraSubscriber {
  id          String   @id @default(uuid())
  groupId     String
  group       ARTGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  name        String
  cccNumber   String
  phoneNumber String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([groupId, cccNumber])
}

model ARTGroupUserEnrollment {
  id         String   @id @default(uuid())
  groupId    String
  group      ARTGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user       Json
  isAdmin    Boolean  @default(false)
  publicName String?
  isCurrent  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum OrderDeliveryMethod {
  in_parcel
  in_person
}

enum OrderType {
  self
  other
}

enum DeliveryMethod {
  self
  courier
  patient_preference
}
